<Window x:Class="BookWorm.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="BookWorm" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Action Panel (unchanged) -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Command="{Binding LoadCommand}"
                    Content="LOAD DATA"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="0,0,10,0" />

            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Search books..."
                     Width="200"
                     Margin="0,0,10,0" />

            <Button Command="{Binding SearchCommand}"
                    Content="SEARCH"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="0,0,10,0" />

            <ComboBox ItemsSource="{Binding SortCriteria}"
                      SelectedItem="{Binding SelectedSortCriteria}"
                      Width="100"
                      Margin="0,0,10,0"
                      materialDesign:HintAssist.Hint="Sort by" />

            <Button Command="{Binding SortCommand}"
                    Content="SORT"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
        </StackPanel>

        <!-- Book Table -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Books}"
                  SelectedItem="{Binding SelectedBook}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  Margin="0,10,0,10"
                  HeadersVisibility="Column"
                  GridLinesVisibility="All"
                  SelectionMode="Single"
                  SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*" />
                <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="2*" />
                <DataGridTextColumn Header="Genre" Binding="{Binding Genre}" Width="*" />
                <DataGridTextColumn Header="Publisher" Binding="{Binding Publisher}" Width="*" />
                <DataGridTextColumn Header="Pages" Binding="{Binding Height}" Width="Auto" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Status Bar (unchanged) -->
        <StatusBar Grid.Row="3" Background="{DynamicResource MaterialDesignBackground}">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{DynamicResource MaterialDesignBody}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>